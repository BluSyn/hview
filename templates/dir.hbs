<!doctype html>
<html>
<head>
    <title>{{title}}</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <link href="data:image/png;base64," rel="icon" type="image/png" />

    <style type="text/css">css_will_be_here</style>
    <script>
        window.ro = {{read_only}}
        window.extraPath = {{base_path}}.slice(0, -1)
        window.onload = function () { js_will_be_here }
    </script>
</head>

<body>
    <div style="display: none;" onclick="window.quitAll()" id="quitAll">
        <i style="display: none;" id="toast">cant reach server</i>
    </div>

    <h1 onclick="return titleClick(event)">{{title}}</h1>

    <div id="pics" style="display:none;"> <img draggable="false" onclick="window.picsNav()" id="picsHolder" /></div>
    <div id="video" style="display:none;"> <video controls id="videoHolder"></video></div>

    <section style="display:grid;grid-template-columns: auto auto auto auto;grid-gap:20px;">
    {{#each folders}}
        <div style="padding:20px;text-align:center;">
            {{#if thumb}} <a onclick="return onClickLink(event)" href="{{path}}"><img src="{{thumb}}" loading="lazy" /></a> {{/if}}
            <strong>{{name}}</strong>
        </div>
    {{/each}}
    {{#each files}}
        <div style="padding:20px;text-align:center;">
            {{#if thumb}} <a onclick="return onClickLink(event)" href="{{path}}"><img src="{{thumb}}" loading="lazy" /></a> {{/if}}
            <a href="{{path}}"><strong>{{name}}</strong></a> ({{size}} Bytes)
        </div>
    {{/each}}
    </section>

    <div id="upBar" class="bar">
        <span style="display: none;" class="barName" id="upBarName"></span>
        <div style="display: none; background-color: green;" class="barPc" id="upBarPc">1%</div>
    </div>
    <div id="ok" class="notif icon-large-ok"></div>
    <div id="sad" class="notif icon-large-sad-server"></div>
</body>
</html>
